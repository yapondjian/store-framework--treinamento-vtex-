{
  "store.product": {
    "children": [
      "flex-layout.row#main"
    ]
  },

  "product-price": {
    "props": {
      "showSavings": false,
      "showListPrice": false
    }
  },
  
  "flex-layout.row#main": {
    "children": [
      "flex-layout.col#left",
      "flex-layout.col#right"
    ],
    "props": {
      "marginTop": 6
    }
  },
  "flex-layout.col#left": {
    "children": [
      "product-images"
    ]
  },
  "flex-layout.col#right": {
    "children": [
      "product-name",
      "product-price",
      "buy-button"
    ],
    "props": {
      "verticalAlign": "middle",
      "preventVerticalStretch": false
    }
  }
}